<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:MyCryptographyApp.ViewModels"
             x:Class="MyCryptographyApp.Views.ViewOperationsPage"
             Title="ViewOperationsPage">
    <ContentPage.BindingContext>
        <viewModels:ViewOperationsViewModel/>
    </ContentPage.BindingContext>
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <CollectionView ItemsSource="{Binding OperationService.Operations}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <VerticalStackLayout>
                        <Label Text="{Binding DisplayName}"/>
                        <Label Text="{Binding StartTime}"/>
                        <Label Text="{Binding EndTime}"/>
                        <Label Text="{Binding Progress}"/>
                        <Label Text="{Binding ProgressMessage}"/>

                    </VerticalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>