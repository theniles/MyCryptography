<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MyCryptographyApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:MyCryptographyApp.Views"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="Help And About"
        ContentTemplate="{DataTemplate views:HelpPage}"
        Route="HelpPage" />

    <ShellContent
        Title="New Operation"
        ContentTemplate="{DataTemplate views:NewOperationPage}"
        Route="NewOperationPage" />

    <ShellContent
        Title="View Operations"
        ContentTemplate="{DataTemplate views:ViewOperationsPage}"
        Route="ViewOperationsPage" />

</Shell>
